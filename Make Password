
package gasken.oi;
import java.util.*;

public class GaskenOi {

    public static void main(String[] args) {
       Scanner s= new Scanner(System.in);
       String password="12345678";
       String katasandi;
       int i=0;
       
       
       
       while(i<3){
           System.out.print("Masukkan katasandi :");
           katasandi=s.nextLine();
           if(katasandi.equals(password)){
               System.out.println("Login berhasil");
               break;
           }
           else if(i==2 && !katasandi.equals(password)){
               System.out.println("Pin salah");
               System.out.println("Maaf akun anda diblokir");
               
           }
           else{
               System.out.println("Pin salah");
           }
              
           i++;
       }
        
  
    }
}

        
        
